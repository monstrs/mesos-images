{
  "variables": {
    "aws_access_key_id": "",
    "aws_secret_access_key": "",
    "aws_source_ami": "{{env `DEFAULT_IMAGE`}}",
    "atlas_token": "{{env `ATLAS_TOKEN`}}",
    "atlas_infrastructure": "{{env `ATLAS_INFRASTRUCTURE`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key_id`}}",
    "secret_key": "{{user `aws_secret_access_key`}}",
    "region": "us-east-1",
    "source_ami": "{{user `aws_source_ami`}}",
    "instance_type": "m1.small",
    "ssh_username": "ubuntu",
    "ssh_timeout": "5m",
    "ami_name": "mesos-kubernetes-{{timestamp}}"
  }],
  "push": {
    "name": "monstrs/mesos-kubernetes"
  },
  "provisioners": [
    {
      "type": "chef-solo",
      "skip_install": true,
      "cookbook_paths": ["./cookbooks/"],
      "run_list": [
        "apt",
        "mesos::kubernetes_apiserver",
        "mesos::kubernetes_controller_manager",
        "mesos::kubernetes_scheduler"
      ],
      "json": {
        "consul": {
          "extra_params": {
            "atlas_token": "{{user `atlas_token`}}",
            "atlas_infrastructure": "{{user `atlas_infrastructure`}}"
          }
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "atlas",
      "artifact": "monstrs/mesos-kubernetes",
      "artifact_type": "aws.ami",
      "metadata": {
        "created_at": "{{timestamp}}"
      }
    }
  ]
}
